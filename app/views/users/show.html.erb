<h2>Library</h2>

<%= form_tag(user_path, method: :get) do %>
<%= text_field_tag(:search, params[:search]) %>
<%= submit_tag("search") %>
<% end %>

<br>

<%= link_to "Create Snipp", new_user_snipp_path(@user) %>
<% @snipps.each do |snipp| %>
  <p>Medium: <%= snipp.medium %></p>
  <p>Quotation: <%= snipp.quotation %></p>
  <p>Quoter: <%= snipp.quoter %></p>
  <p>Takeaway: <%= snipp.takeaway %></p>
  <p>Source: <%= snipp.source %></p>
  <p><%= link_to "Delete", snipp_path(snipp), method: :delete %></p>
<% end %>
