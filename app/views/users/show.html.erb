<h2>Library</h2>

<br>

<%= form_tag(user_path, method: :get) do %>
<%= text_field_tag(:search, params[:search]) %>
<%= submit_tag("search") %>
<% end %>

<br>

<%= link_to "Create Snipp", new_user_snipp_path(@user) %>

<div class="snipp-cards">
  <% @snipps.each do |snipp| %>
    <div class="snipp-card">
      <div class="snipp-medium">
        <%= snipp.medium %>
      </div>
      <div class="snipp-more-options">
        <%= link_to "Delete", snipp_path(snipp), method: :delete %>
      </div>
      <div class="snipp-quotation">
        <p>"<%= snipp.quotation %>"</p>
      </div>
      <div class="snipp-quoter">
        <p>-<%= snipp.quoter %></p>
      </div>
    </div>
  <% end %>
</div>
